#tabs {
overflow: hidden;
width: 100%;
margin: 0;
padding: 0;
list-style: none;
}
#tabs li {
float: left;
margin: 3px -15px 0 0;
}
#tabs a {
float: left;
position: relative;
padding: 0 30.1px;
height: 0;
line-height: 30px;
text-transform: uppercase;
text-decoration: none;
color: #fff;
border-right: 30px solid transparent;
border-bottom: 30px solid #3D3D3D;
border-bottom-color: #777\9;
opacity: .3;
filter: alpha(opacity=30);
}
#tabs a:hover,  #tabs a:focus {
border-bottom-color: #2ac7e1;
opacity: 1;
filter: alpha(opacity=100);
}
#tabs a:focus {
outline: 0;
}
#tabs #current {
z-index: 3;
border-bottom-color: #22add6;
opacity: 1;
filter: alpha(opacity=100);
}
/* ----------- */
#content {
background: #fff;
border-top: 2px solid #72B626;
padding: 2em;/*height: 220px;*/
border: 1px solid #22add6;
    margin:  0px 0 30px 0;
	-webkit-border-top-left-radius: 00px;
-webkit-border-top-right-radius: 05px;
-moz-border-radius-topleft: 00px;
-moz-border-radius-topright: 05px;
